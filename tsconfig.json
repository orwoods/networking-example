{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": { "files": true },
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "checkJs": true,
    "outDir": "./build",
    "incremental": false,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
}
